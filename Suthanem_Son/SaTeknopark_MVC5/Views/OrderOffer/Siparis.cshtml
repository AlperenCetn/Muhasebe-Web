            $(".select2_demo_3").select2({
                allowClear: true
            });

            oTable = $('.dataTables-example').DataTable({
                pageLength: 25,
                "ajax": {
                    "url": "/OrderOffer/GetOrder",
                    "type": "GET",
                    "datatype": "json",
                },
                buttons: true,
                dom: '<"html5buttons"B>lTfgitp',
                "columns": [

                    {
