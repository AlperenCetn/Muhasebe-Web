                                                    <label>Ülkeler</label>
                                                    @Html.DropDownList("Ülke", new SelectList(AyarMetot.Ulkeler(), "Value", "Text", "TR"), "Ülke Seçiniz", new { @id = "Ulke", @class = "form-control" })
                                                </div>
                                            </div>
                                            <div class="col-md-4 px-1">
