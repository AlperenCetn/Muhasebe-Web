<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox " style="box-shadow: 8px 14px 12px gray">
                <div class="ibox-title ">
                    
                    <button onclick="Temizle()" id="Yeni" style='background-color: #1ab394;color: white; box-shadow: 2px 2px 2px grey;' type="button" class="btn btn-sm" data-toggle="modal" data-target="#UyeOl">
                        Depo Ekle
                    </button>

                    <div class="modal inmodal " id="UyeOl" tabindex="-1" role="dialog" aria-labelledby="">
                        <div class="modal-dialog modal-lg" role="document">
                            <div class="modal-content animated bounceInRight">
                                <div class="modal-header">
                                    <a style="text-align:left; color:white" class="btn btn-danger btn-xs" id="myModalLabel">DEPO KARTI</a>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">×</span>
                                    </button>

                                </div>
                                <form id="veri" method="post" action="/Depo/YeniDepo">
                                    <div class="modal-body">


                                        <div class="row">
                                            <div class="col-md-4 px-1">
                                                <div class="form-group">
                                                    <label> Depo Kodu</label>
                                                    <input id="DepoKodu" name="IslemTarih" type="text" class="form-control" value="@ViewBag.DepoKoduSiradaki">
                                                </div>
                                            </div>
                                            <div class="col-md-4 px-1">
                                                <div class="form-group">
                                                    <label>Depo Adı</label>
                                                    <input id="DepoAdi" name="DepoAdi" type="text" class="form-control" value="">

                                                </div>
                                            </div>
                                            <div class="col-md-4 px-1">
                                                <label>Depo Durumu</label>
                                                <div class="input-group">
                                                    @Html.DropDownList("DepoDurumu", new SelectList(AyarMetot.DepoDurumu(), "Value", "Text", "Aktif"),
                                                        new {@id = "DepoDurumu", @class = "select2_demo_3 form-control", @style = "font-size:x-small"})
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-4 px-2">
                                                <div class="form-group">
                                                    <label>Açıklama</label>
                                                    <input id="Aciklama" type="text" name="Aciklama" Value="" class="form-control ">

                                                </div>
                                            </div>
                                            <div class="col-md-4 px-2">
                                                <div class="form-group">
                                                    <label>Varsayılan</label>
                                                    <input type="text" id="Varsayilan" name="Varsayilan" class="form-control " disabled="disabled" />
                                                </div>
                                            </div>
                                            @*<div class="col-md-4 px-1">
                                                <label>Bayi</label>
                                                <div class="input-group">
                                                    @Html.DropDownList("BayiDurumu", new SelectList(AyarMetot.Bayiler(Session["FirmaID"].ToString()), "Value", "Text"),
                                                        new {@id = "BayiDurumu", @class = "select2_demo_3 form-control", @style = "font-size:x-small"})
                                                </div>
                                            </div>*@
                                        </div>
                                        <div class="col-md-3 px-1">
                                            <div class="form-group">
                                                @Html.Hidden("cID", -1)
                                            </div>
                                        </div>

                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-default" data-dismiss="modal">Kapat</button>
                                        <button type="submit" class="btn btn-primary">Kaydet</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>


                    <h5>&nbsp; Depo Listesini görüntülemektesiniz</h5>


                </div>
                <div class="ibox-content">

                    <table class="table table-striped table-bordered table-hover dataTables-example" style="width: 100%">
                        <thead>
                            <tr>
                                <th>KOD</th>
                                <th>DEPO/LOKASYON</th>
                                <th> ID</th>
                                <th> </th>

                            </tr>
